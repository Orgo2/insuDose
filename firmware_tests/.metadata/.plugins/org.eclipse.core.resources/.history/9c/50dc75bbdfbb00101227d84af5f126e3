uint8_t dose = 0;
float temperature = 0.0f;

/* --- additions for button/logging/display handling --- */
static volatile uint8_t dose_button_pressed = 0; // set from EXTI
static uint32_t last_button_tick = 0; // debounce
static uint8_t BlackImage[/* bytes */(EPD_WIDTH * EPD_HEIGHT / 8)];

/* USB VBUS detect (PE4) */
#define USB_5V_GPIO_Port GPIOE
#define USB_5V_Pin       GPIO_PIN_4
